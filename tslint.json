{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "align": [true, "parameters", "statements", "members", "elements"],
    "completed-docs": [
      true,
      {
        "functions": true,
        "methods": true,
        "classes": true
      }
    ],
    "no-console": [true, "log", "error"],
    "no-implicit-dependencies": false,
    "max-line-length": [true, {"limit": 140, "ignore-pattern": "^import |^export {(.*?)}"}],
    "object-shorthand-properties-first": false,
    "only-arrow-functions": false,
    "semicolon": [true, "never"],
    "ter-arrow-parens": false,
    "variable-name": [true, "ban-keywords", "allow-leading-underscore", "allow-snake-case", "allow-trailing-underscore"]
  }
}
